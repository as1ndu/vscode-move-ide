{
    "scopeName": "source.move.spec",
    "repository": {
        "line-comments": {
            "comment": "Single-line comment",
            "name": "comment.line.double-slash.move",
            "begin": "//",
            "end": "$"
        },
        "import": {
            "name": "storage.type.move.spec",
            "match": "\\b(use)\\b"
        },
        "keywords": {
            "name": "storage.type.move.spec",
            "match": "\\b(invariant|global|ensures|define)\\b"
        }
    },
    "patterns": [
        { "include": "#define" },
        { "include": "#line-comments" },
        { "include": "#keywords" },
        { "include": "#import" }
    ]
}
